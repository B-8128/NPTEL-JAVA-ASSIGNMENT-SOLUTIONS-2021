//Calculate the perimeter 
  //Calculate the area
          double pi=Math.PI;
          if(radius<=0)
          {
            System.out.print("please enter non zero positive number");
          }
           else
           {
             perimeter=2*pi*radius;
             area=pi*radius*radius;
             System.out.print(perimeter+"\n"+area);
           }
                                

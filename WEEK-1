//PROGRAMMING ASSIGNMENT----4
//Use while loop check the number is Armstrong or not.
//store the output(1 or 0) in result variable.
int n1=n,r;
while(n1>0)
{
  r=n1%10;
  n1=n1/10;
  result=result+r*r*r;
}
if(result==n)
{
  System.out.print("1");
}
else
{
  System.out.print("0");
}

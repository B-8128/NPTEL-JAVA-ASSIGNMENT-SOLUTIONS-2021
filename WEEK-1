//Use if...else ladder to find the largest among 3 numbers and store the largest number in a variable called result.
if(x>y)
{
  if(x>z)
  {
    result=x;
  }
  else 
  {
    result=z;
  }
}
else
{
  if(y>z)
  {
    result=y;
  }
  else
  {
    result=z;
  }
}
System.out.print(result);
